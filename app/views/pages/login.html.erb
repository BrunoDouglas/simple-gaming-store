<!--  Login Form -->
<form action="/doLogin" id="checkout-form" method="GET">
  <div class="col-md-12 text-center">
    <h3><%=params[:message]%></h3>
  </div>
  <div class="col-md-6">
    <div class="section-title">
      <h3 class="title">Sign In</h3>
    </div>
    <div class="form-group">
        <input class="input" type="email" name="email" placeholder="Email">
    </div>
    <div class="form-group">
        <input class="input" type="password" name="password" placeholder="Enter Your Password">
    </div>
    <div class="form-group">
      <div class="pull-right">
        <%= button_tag 'Login', class: 'primary-btn' %>
      </div>
    </div>
  </div>
</form>
<%=form_tag("/doRegister", method: :post) do %>

  <%= csrf_meta_tags %>
  <div class="col-md-6">
    <div class="billing-details">
      <div class="section-title">
        <h3 class="title">Sign Up</h3>
      </div>
      <div class="form-group">
          <input class="input" type="email" name="email" placeholder="Email">
      </div>
      <div class="form-group">
          <input class="input" type="password" name="password" placeholder="Enter Your Password">
      </div>
      <div class="form-group">
        <input class="input" type="text" name="name" placeholder="Name">
      </div>
      <div class="form-group">
        <input class="input" type="number" name="age" placeholder="Age">
      </div>
      <div class="form-group">
        <input class="input" type="text" name="line1" placeholder="Address">
      </div>
      <div class="form-group">
        <input class="input" type="text" name="city" placeholder="City">
      </div>
      <div class="form-group">
        <%=select_tag "province", options_from_collection_for_select(@provinces, "id", "name") %>
      </div>
      <div class="form-group">
        <input class="input" type="text" name="postal_code" placeholder="Postal Code">
      </div>
      <div class="form-group">
        <input class="input" type="tel" name="phone" placeholder="Telephone">
      </div>
    </div>
    <div class="pull-right">
       <%= button_tag 'Register', class: 'primary-btn' %>
    </div>
  </div>
</div>
<% end %>
<!-- /Login Form-->
