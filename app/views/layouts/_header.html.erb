<header>
  <!-- header -->
  <div id="header">
    <div class="container">
      <div class="pull-left" >
        <!-- Logo -->
        <div class="header-logo">
          <a class="logo" href="/">
            <img src="/img/logo.png" alt="">
          </a>
        </div>
        <!-- /Logo -->

        <!-- Search -->
        <div class="header-search">
          <%=form_tag('/search', method: :get) do %>
            <%= text_field_tag 'searchInput', params[:searchInput], placeholder: 'Enter your keyword', class: 'input search-input' %>
            <%= select_tag "searchCategory", options_from_collection_for_select(platforms, "id", "name", params[:searchCategory]), class: 'input search-categories' %>
            <button class="search-btn"><i class="fa fa-search"></i></button>
          <% end %>
        </div>
        <!-- /Search -->
      </div>
      <div class="pull-right">
        <ul class="header-btns">
          <!-- Account -->
          <li class="header-account dropdown default-dropdown">

              <div class="header-btns-icon">
                <i class="fa fa-user-o"></i>
              </div>

              <% if !@loggedUser %>
              <strong class="text-uppercase"> My Account</strong>
              <br />
              <a href="/login">
                <span>Enter</span>
              </a>
              <% else %>
              <strong class="text-uppercase"> <%=@loggedUser.email%></strong>
              <br />
              <a href="/logout">
                <span>Logout</span>
              </a>
              <% end %>
          </li>
          <!-- /Account -->

          <!-- Cart -->
          <li class="header-cart">
            <a href="/cart">
              <div class="header-btns-icon">
                <i class="fa fa-shopping-cart"></i>
                <span class="qty"><%=@qty%></span>
              </div>
              <strong class="text-uppercase">My Cart:</strong>
              <br />
              <span>C$<%=@total%></span>
            </a>
          </li>
          <!-- /Cart -->

          <!-- Mobile nav toggle-->
          <li class="nav-toggle">
            <button class="nav-toggle-btn main-btn icon-btn"><i class="fa fa-bars"></i></button>
          </li>
          <!-- / Mobile nav toggle -->
        </ul>
      </div>
    </div>
    <!-- header -->
  </div>
  <!-- container -->
</header>